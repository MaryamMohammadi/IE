<%- model_class = Tag -%>
<div class="page-header" style="text-align:right; padding-right: 50px">
  <h1><%=t '.title', :default => t('tags') %></h1>
</div>

<div class="container">
<table class="table table-striped" dir="rtl">
  <thead>
    <tr>
      <th style="text-align:center">
        <%= model_class.human_attribute_name(t(:id)) %>
      </th>
      <th style="text-align:center"><%= model_class.human_attribute_name(t(:item)) %></th>
      <th style="text-align:center"><%= t('item_price') %></th>
      <th style="text-align:center"><%= model_class.human_attribute_name(t(:is_sold)) %></th>
      <th style="text-align:center"><%= model_class.human_attribute_name(t(:tag_serial)) %></th>
      <th style="text-align:center"><%= model_class.human_attribute_name(t(:created_at)) %></th>
      <th></th><!-- 
      <th style="text-align:center"><%=t '.actions', :default => t("helpers.actions") %></th> -->
    </tr>
  </thead>
  <tbody align="center">
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.id, tag_path(tag) %></td>
      
        <td><%= tag.item.name %></td>
        <td><%= tag.item.price%></td>
        <td><%= tag.is_sold %></td>
        <td><%= tag.tag_serial %></td>
        <td><%= tag.created_at.strftime("%y-%m-%d") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tag_path(tag), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tag_path(tag),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tag_path,
            :class => 'btn btn-primary' %>

</div>

<div style="clear: both; padding-top:100px"></div>

