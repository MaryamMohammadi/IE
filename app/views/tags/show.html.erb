<%- model_class = Tag -%>
<div class="page-header" style="text-align:right; padding-right: 50px">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:item_id) %>:</strong></dt>
  <dd><%= @tag.item_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_sold) %>:</strong></dt>
  <dd><%= @tag.is_sold %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag_serial) %>:</strong></dt>
  <dd><%= @tag.tag_serial %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              tags_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tag_path(@tag), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tag_path(@tag),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
