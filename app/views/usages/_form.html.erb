<%= form_for @usage, :html => { :class => "form-horizontal usage" } do |f| %>

    <% if @usage.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@usage.errors.count, "error") %> prohibited this usage from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @usage.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@usage[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :cart_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cart_id, :class => 'form-control' %>
    </div>
    <%= error_span(@usage[:cart_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('cancel', :default => t("helpers.links.cancel")),
            usages_path, :class => 'btn btn-default' %>

<% end %>
