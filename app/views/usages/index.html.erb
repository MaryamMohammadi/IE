<%- model_class = Usage -%>
<div class="page-header" style="text-align:right; padding-right: 50px">
  <h1><%=t '.title', :default => t('usages') %></h1>
</div>

<%= form_for :usage, :url =>{ :controller => :usages, :action => :show_with_cart}, :method => :get do 
  |f| %>
<p align="right" style="margin-right:50px">
    <%= f.submit t("cart_id") %>
    <%= f.number_field :cart_id %>
  </p>
  <% end %>



<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:cart_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @usages.each do |usage| %>
      <tr>
        <td><%= link_to usage.id, usage_path(usage) %></td>
        <td><%= usage.user_id %></td>
        <td><%= usage.cart_id %></td>
        <td><%=l usage.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_usage_path(usage), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      usage_path(usage),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_usage_path,
            :class => 'btn btn-primary' %>
</div>