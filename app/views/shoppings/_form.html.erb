<%= form_for @shopping, :html => { :class => "form-horizontal shopping" } do |f| %>

    <% if @shopping.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@shopping.errors.count, "error") %> prohibited this shopping from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @shopping.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>



  
  <div class="control-group">
    <%= f.label :tag_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tag_id, :class => 'form-control' %>
    </div>
    <%= error_span(@shopping[:tag_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :usage_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :usage_id, :class => 'form-control' %>
    </div>
    <%= error_span(@shopping[:usage_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :purchase_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :purchase_id, :class => 'form-control' %>
    </div>
    <%= error_span(@shopping[:purchase_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('cancel', :default => t("helpers.links.cancel")),
            shoppings_path, :class => 'btn btn-default' %>

<% end %>
