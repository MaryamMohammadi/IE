<%- model_class = Shopping -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tag_id) %></th>
      <th><%= model_class.human_attribute_name(:usage_id) %></th>
      <th><%= model_class.human_attribute_name(:purchase_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shoppings.each do |shopping| %>
      <tr>
        <td><%= link_to shopping.id, shopping_path(shopping) %></td>
        <td><%= shopping.tag_id %></td>
        <td><%= shopping.usage_id %></td>
        <td><%= shopping.purchase_id %></td>
        <td><%=l shopping.created_at %></td>
        <td>
          <%= link_to t('edit', :default => t("helpers.links.edit")),
                      edit_shopping_path(shopping), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                      shopping_path(shopping),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('new', :default => t("helpers.links.new")),
            new_shopping_path,
            :class => 'btn btn-primary' %>
