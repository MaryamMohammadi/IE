<%= form_for @purchase, :html => { :class => "form-horizontal purchase" } do |f| %>

    <% if @purchase.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@purchase.errors.count, "error") %> prohibited this purchase from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @purchase.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@purchase[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%= error_span(@purchase[:date]) %>
  </div>
  <div class="control-group">
    <%= f.label :total_cost, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total_cost, :class => 'form-control' %>
    </div>
    <%= error_span(@purchase[:total_cost]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            purchases_path, :class => 'btn btn-default' %>

<% end %>
