<%- model_class = Store -%>
<div class="page-header" style="text-align:right; padding-right: 50px">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal" style="text-align:right; margin-right: 20%; padding-top: 50px; padding-bottom:50px; padding-right:20%; float:center">
  <div class="row">
    <div class="col-md-6" style="float:right">
      <dt></dt>
      <dd><div class="img-rounded"><%= image_tag @store.store_image, :class => 'style_image' %></div></dd>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-8" style="float:right; padding-left:0; padding-right:2%">
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= model_class.human_attribute_name(t(:company_name)) %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @store.company_name %></dd>
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= model_class.human_attribute_name(t(:telephone_number1)) %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @store.telephone_number1 %></dd>
      </br>
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= model_class.human_attribute_name(t(:telephone_number2)) %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @store.telephone_number2 %></dd>
      </br>
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= model_class.human_attribute_name(t(:company_address)) %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @store.company_address %></dd>
      </br>
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= 'مدیر فروشگاه' %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @store.creator.profile.first_name %></dd>
    </div>
  </div>
</dl>
</br>
<% if @store.creator == current_user %>
  <div style="clear:both; padding-top:50px" align="center">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                  stores_path, :class => 'btn btn-default' , :method => :get %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_store_path(@store), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  store_path(@store),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
  </div><!-- 
  <%= link_to  t('add_item_to_store') , items_path %> -->
<% end %>



<div class="maincontent-area" style="clear: both; padding-top:100px">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h5 class="section-title">محصولات</h5>
                    <div style="margin-left:130px" align="left">
                      <%= link_to  t('add_item_to_store') , items_path, :method => 'get' %>
                    </div>
                    <div class="product-carousel" align="center" >
                      <% if @store.availables.blank? %>
                        <div>
                          <strong>
                          هیچ محصولی موجود نمی باشد
                        </strong>
                      </div>
                      <% end %>
                      <% @store.availables.each do |storeItem| %>
                        <div class="single-product">
                          <div class="product-f-image">
                              <%= image_tag(storeItem.item.item_image, :alt => "") %>
                              <div class="product-hover">
                                <%= link_to(t('add_new_tag'), tags_path(item: storeItem.item.id) , :class => "fa fa-shopping-cart add-to-cart-link fa-right-text" , :method => 'get') %>
                                <%= link_to(t('see_details'), available_path(storeItem) ,:class => "fa fa-link view-details-link fa-right-text", :method=>'get') %>

                                <!-- 
                                  <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                  <a href="single-product.html" class="view-details-link"><i class="fa fa-link"></i> See details</a> -->
                              </div>
                          </div>
                          <h2>
                            <%= storeItem.item.name %>
                          </h2>
                          
                          <div class="product-carousel-price">
                              <ins><%= storeItem.item.price %></ins>
                          </div> 
                        </div>
                      <% end %>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->







