<%- model_class = Store -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
	<dt><strong><%= model_class.human_attribute_name(t(:company_name)) %>:</strong></dt>
  	<dd><%= @store.company_name %></dd>
  	<dt><strong><%= model_class.human_attribute_name(t(:telephone_number1)) %>:</strong></dt>
  	<dd><%= @store.telephone_number1 %></dd>
  	<dt><strong><%= model_class.human_attribute_name(t(:telephone_number2)) %>:</strong></dt>
  	<dd><%= @store.telephone_number2 %></dd>
  	<dt><strong><%= model_class.human_attribute_name(t(:company_address)) %>:</strong></dt>
  	<dd><%= @store.company_address %></dd>
  	<dt><strong><%= 'مدیر فروشگاه' %>:</strong></dt>
  	<dd><%= @store.creator.profile.first_name %></dd>
  	
</dl>

<% if @store.creator == current_user %>
	<%= link_to t('.back', :default => t("helpers.links.back")),
	              stores_path, :class => 'btn btn-default'  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_store_path(@store), :class => 'btn btn-default' %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              store_path(@store),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>

  <%= link_to  t('add_item_to_store') , items_path %>
<% end %>



<table class="table table-striped">
  <thead>
    <tr>
      <th><%= 'نام کالا' %></th>
      <th><%= 'نوع کالا' %></th>
      <th><%= 'کارخانه سازنده' %></th>
      <th><%= 'قیمت' %></th>
      <th></th>

    </tr>
  </thead>
  <tbody>
    <% @store.availables.each do |storeItem| %>
      <tr>
        <td><%= storeItem.item.name %></td>
        <td><%= storeItem.item.item_type %></td>
        <td><%= storeItem.item.item_company %></td>
        <td><%= storeItem.item.price %></td>
        <td>
          <% if @store.creator == current_user %>
            
            <%= link_to t('Delete') ,  available_path(storeItem) ,  :method => :delete, :store_id => storeItem.id%>
            <%= link_to t('add_new_tag'), tags_path(item: storeItem.item.id) %>

            

          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
