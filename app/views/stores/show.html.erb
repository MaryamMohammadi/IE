<%- model_class = Store -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dd><div class="img-rounded"><%= image_tag @store.store_image, :size => '100x100' %></div></dd>
	<dt><strong><%= model_class.human_attribute_name(t(:company_name)) %>:</strong></dt>
	<dd><%= @store.company_name %></dd>
	<dt><strong><%= model_class.human_attribute_name(t(:telephone_number1)) %>:</strong></dt>
	<dd><%= @store.telephone_number1 %></dd>
	<dt><strong><%= model_class.human_attribute_name(t(:telephone_number2)) %>:</strong></dt>
	<dd><%= @store.telephone_number2 %></dd>
	<dt><strong><%= model_class.human_attribute_name(t(:company_address)) %>:</strong></dt>
	<dd><%= @store.company_address %></dd>
	<dt><strong><%= 'مدیر فروشگاه' %>:</strong></dt>
	<dd><%= @store.creator.profile.first_name %></dd>
  	
</dl>

<% if @store.creator == current_user %>
	<%= link_to t('.back', :default => t("helpers.links.back")),
	              stores_path, :class => 'btn btn-default'  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_store_path(@store), :class => 'btn btn-default' %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              store_path(@store),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>

  <%= link_to  t('add_item_to_store') , items_path %>
<% end %>




<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Latest Products</h2>
                    <div class="product-carousel">

                      <% @store.availables.each do |storeItem| %>
                        <div class="single-product">
                          <div class="product-f-image">
                              <%= image_tag(storeItem.item.item_image, :alt => "") %>
                              <div class="product-hover">
                                  <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                  <a href="single-product.html" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                              </div>
                          </div>
                          <h2><%= link_to storeItem.item.name, available_path(storeItem)%></h2>
                          
                          <div class="product-carousel-price">
                              <ins><%= storeItem.item.price %></ins>
                          </div> 
                        </div>
                      <% end %>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->







