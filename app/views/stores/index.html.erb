<%- model_class = Store -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(t(:company_name)) %></th>
      <th><%= model_class.human_attribute_name(t(:telephone_number1)) %></th>
      <th><%= model_class.human_attribute_name(t(:telephone_number2)) %></th>
      <th><%= model_class.human_attribute_name(t(:company_address)) %></th>
      
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.company_name, store_path(store) %></td>
        <td><%= store.telephone_number1 %></td>
        <td><%= store.telephone_number2 %></td>
        <td><%= store.company_address %></td>
        <td>
          <% if store.creator == current_user %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_store_path(store), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      store_path(store),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_store_path,
            :class => 'btn btn-primary' %>
