<%- model_class = Store -%>
<div class="page-header"  style="text-align:right; padding-right: 50px" >
  <h1><%=t '.title', :default => t("stores") %></h1>
</div>






<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row" >
           
            <div class="col-md-12"  style="text-align: center">
                <div class="latest-product" >
                    <div class="product-carousel"  align="center">

                      <% @stores.each do |store| %>
                        <div class="single-product">
                          <div class="product-f-image">
                              <%= image_tag(store.store_image, :alt => "") %>
                              <div class="product-hover">
                                  <%= link_to( t('see_details'), store_path(store) ,:class => "fa fa-link view-details-link fa-right-text", :method=>'get') %>
                                  
                                  
                              </div>
                          </div>
                          <h2>
                            <%= store.company_name %>
                          </h2>
                        </div>
                      <% end %>

                    </div>
                </div>
            </div>
          
        </div>
    </div>
    <% if current_user.present? and current_user.store.blank? %>
      <div style="margin-left:50px">
        <%= link_to t('new_store'), new_store_path, :class => 'link_to_class'%>
      </div>
    <% end %>
</div> <!-- End main content area -->









