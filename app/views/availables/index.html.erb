<%- model_class = Available -%>
<div class="page-header" style="text-align:right; padding-right: 50px"> 
  <h1><%=t '.title', :default => t('availables') %></h1>
</div>

<div class="container">
<table id="availables_table" class="table table-stripped new_table" dir="rtl">
  <tr>
    <th><%= model_class.human_attribute_name(t(:item)) %></th>
    <th><%= model_class.human_attribute_name(t(:item_count)) %></th>
    <th><%= model_class.human_attribute_name(t(:store_name)) %></th>
    <th></th>
    <th></th>
  </tr>
    <% @availables.each do |available| %>
      <tr align="center">
        <td><%= link_to available.item.name , available_path(available)%></td>
        <td>
          <%= available.item_count %>
        </td>
        <td><%= available.store.company_name %></td>
        <td>
          <%= link_to t('edit', :default => t("helpers.links.edit")),
                      edit_available_path(available), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                      available_path(available),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
        <td><div class="arrow"></div></td>
      </tr>

      <tr>
        <td colspan="5">
          <div class="first_div_in_table">
              <div class="img-rounded" class="second_div_in_table"><%= image_tag available.item.item_image %></div>
              </div>
              <div class="third_div_in_table">
              <ul>
                  <li><span>قیمت: </span><%= available.item.price %> <span> تومان</span></li>
                  <li><span>کارخانه‌ی سازنده: </span><%= available.item.item_company %></li>
                  <li><span>کد محصول: </span><%= available.item.item_code %></li>
                  <li><span>تاریخ ثبت کالا در فروشگاه: </span><%= available.created_at.strftime("%y-%m-%d") %></li>
               </ul>   
               </div>
        </td>
      </tr>
    <% end %>

</table>



<%= link_to t('new', :default => t("helpers.links.new")),
            new_available_path,
            :class => 'btn btn-primary' %>
</div>


<div style="clear: both; padding-top:100px"></div>


