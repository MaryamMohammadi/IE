<%= form_for @available, :html => { :class => "form-horizontal available" } do |f| %>

    <% if @available.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@available.errors.count, "error") %> prohibited this available from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @available.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :item_count, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_count, :class => 'form-control' %>
    </div>
    <%= error_span(@available[:item_count]) %>
  </div>
  <div class="control-group">
    <%= f.label :item_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_id, :class => 'form-control' %>
    </div>
    <%= error_span(@available[:item_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :store_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :store_id, :class => 'form-control' %>
    </div>
    <%= error_span(@available[:store_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('cancel', :default => t("helpers.links.cancel")),
            availables_path, :class => 'btn btn-default' %>

<% end %>
