<%- model_class = Available -%>
<div class="page-header" style="text-align:right; padding-right: 50px">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal" style="text-align:right; margin-right: 20%; padding-top: 50px; padding-bottom:50px; padding-right:20%; float:center">
  <div class="row">
    <div class="col-md-6" style="float:right">
      <dt></dt>
      <dd><div class="img-rounded"><%= image_tag @available.item.item_image, :class => 'style_image' %></div></dd>
    </div>
    <br/><br/>
    <div class="col-md-1"></div>
    <div class="col-md-8" style="float:right; padding-left:0; padding-right:2%">
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= t('item_id') %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @available.item_id %></dd>
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= t('store_name') %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @available.store.company_name %></dd>
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= t('item_price') %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @available.item.price %></dd>
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= t('item_company') %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @available.item.item_company %></dd>
      <dt style="float:right; clear:both; margin-top:15px"><strong>:<%= t('item_type') %></strong></dt>
      <dd style="float:right; margin-top:15px"><%= @available.item.item_type %></dd>
    </div>
  </div>
</dl>

</br>

<div style="clear:both; padding-top:50px" align="center">
<%= link_to t('.back', :default => t("helpers.links.back")),
              availables_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_available_path(@available), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              available_path(@available),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<div style="clear: both; padding-top:200px"></div>
