<%- model_class = Available -%>
<div class="page-header" style="text-align:right; padding-right: 50px">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal"  style="text-align:right; padding-right: 45%">
  <dt></dt>
  <dd><div class="img-rounded"><%= image_tag @available.item.item_image, :size => '100x100' %></div></dd>
  <dt style="float:right"><strong>:<%= t('item_id') %></strong></dt>
  <dd style="float:right"><%= @available.item_id %></dd>
  <dt style="float:right; clear:both"><strong>:<%= t('store_name') %></strong></dt>
  <dd style="float:right"><%= @available.store.company_name %></dd>
  <dt style="float:right; clear:both"><strong>:<%= t('item_price') %></strong></dt>
  <dd style="float:right"><%= @available.item.price %></dd>
  <dt style="float:right; clear:both"><strong>:<%= t('item_company') %></strong></dt>
  <dd style="float:right"><%= @available.item.item_company %></dd>
  <dt style="float:right; clear:both"><strong>:<%= t('item_type') %></strong></dt>
  <dd style="float:right"><%= @available.item.item_type %></dd>
</dl>
</br>

<div style="clear:both; padding-top:50px" align="center">
<%= link_to t('.back', :default => t("helpers.links.back")),
              availables_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_available_path(@available), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              available_path(@available),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<div style="clear: both; padding-top:200px"></div>
