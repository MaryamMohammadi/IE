<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">

  <dd><div class="img-rounded"><%= image_tag @profile.avatar, :size => '100x100' %></div></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:first_name)) %>:</strong></dt>
  <dd><%= @profile.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:last_name)) %>:</strong></dt>
  <dd><%= @profile.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:ssn)) %>:</strong></dt>
  <dd><%= @profile.ssn %></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:email)) %>:</strong></dt>
  <dd><%= @profile.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:mobile)) %>:</strong></dt>
  <dd><%= @profile.mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:phone_number)) %>:</strong></dt>
  <dd><%= @profile.phone_number %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
