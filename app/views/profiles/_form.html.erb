<%= form_for @profile, :html => { :class => "form-horizontal profile" } do |f| %>

    <% if @profile.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="control-group">
    <%= f.label t(:avatar)  %>
    <%= f.file_field :avatar %> 
    <%= f.hidden_field :avatar_cache %>
  </div>


  <!-- <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@profile[:user_id]) %>
  </div> -->
  <div class="control-group">
    <%= f.label t(:first_name), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
    <%= error_span(@profile[:first_name]) %>
  </div>
  <div class="control-group">
    <%= f.label t(:last_name), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
    <%= error_span(@profile[:last_name]) %>
  </div>
  <div class="control-group">
    <%= f.label t(:ssn), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ssn, :class => 'form-control' %>
    </div>
    <%= error_span(@profile[:ssn]) %>
  </div>
  <div class="control-group">
    <%= f.label t(:email), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
