<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>



<%= form_tag items_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(t(:name)) %></th>
      <th><%= model_class.human_attribute_name(t(:price)) %></th>
      <th><%= model_class.human_attribute_name(t(:item_type)) %></th>
      <th><%= model_class.human_attribute_name(t(:item_company)) %></th>
      <th><%= model_class.human_attribute_name(t(:item_code)) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <!-- <th><%=t '.actions', :default => t("helpers.actions") %></th> -->
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.item_type %></td>
        <td><%= item.item_company %></td>
        <td><%= item.item_code %></td>
        <td><%=l item.created_at %></td>
        <td>
          <!-- 
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_item_path(item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      item_path(item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
 -->
          <% if current_user.store.availables.find_by_item_id(item.id).blank? %>
            <!-- 
            <%= link_to 'Add this Item to store' , availables_path , :method => :POST%>
             -->
            <%= link_to t('add_item_to_store'), {:controller => "availables", 
                       :action => "create", 
                       :store_id => current_user.store.id, 
                       :item_id => item.id,
                       :item_count => 0},
                       :method => "post" %>
          
          <% else %>
            <%= t('already_have_item')%>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_item_path,
            :class => 'btn btn-primary' %>
