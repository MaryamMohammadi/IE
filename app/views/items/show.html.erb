<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dd><div class="img-rounded"><%= image_tag @item.item_image, :size => '100x100' %></div></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:name)) %>:</strong></dt>
  <dd><%= @item.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:price)) %>:</strong></dt>
  <dd><%= @item.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:item_type)) %>:</strong></dt>
  <dd><%= @item.item_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:item_company)) %>:</strong></dt>
  <dd><%= @item.item_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(t(:item_code)) %>:</strong></dt>
  <dd><%= @item.item_code %></dd>
</dl>



<%= link_to t('.back', :default => t("helpers.links.back")),
              items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_path(@item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
