<%- model_class = Item -%>
<div class="page-header" style="text-align:right; padding-right: 50px">
  <h1><%=t '.title', :default => t("item") %></h1>
</div>

<dl class="dl-horizontal" style="text-align:right; padding-right: 100px; float:right">
  <dt></dt>
  <dd><div class="img-rounded"><%= image_tag @item.item_image, :size => '100x100' %></div></dd>
  <dt style="float:right"><strong>:<%= model_class.human_attribute_name(t(:name)) %></strong></dt>
  <dd style="float:right"><%= @item.name %></dd>
  <dt style="float:right; clear:both"><strong>:<%= model_class.human_attribute_name(t(:price)) %></strong></dt>
  <dd style="float:right"><%= @item.price %></dd>
  <dt style="float:right; clear:both"><strong>:<%= model_class.human_attribute_name(t(:item_type)) %></strong></dt>
  <dd style="float:right"><%= @item.item_type %></dd>
  <dt style="float:right; clear:both"><strong>:<%= model_class.human_attribute_name(t(:item_company)) %></strong></dt>
  <dd style="float:right"><%= @item.item_company %></dd>
  <dt style="float:right; clear:both"><strong>:<%= model_class.human_attribute_name(t(:item_code)) %></strong></dt>
  <dd style="float:right"><%= @item.item_code %></dd>
</dl>


<div align="right" style="clear:both; margin-right:100px">
<%= link_to t('.back', :default => t("helpers.links.back")),
              items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_path(@item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<div style="clear: both; padding-top:100px"></div>